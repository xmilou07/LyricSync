@model LyricSync.Models.Song

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #4a3aff;">Edit</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-4">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Artist" class="form-label"></label>
        <input asp-for="Artist" class="form-control" />
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Album" class="form-label"></label>
        <input asp-for="Album" class="form-control" />
        <span asp-validation-for="Album" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Genre" class="form-label"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Lyrics" class="form-label"></label>
        <textarea asp-for="Lyrics" class="form-control" rows="8" placeholder="Edit or paste lyrics here..."></textarea>
        <span asp-validation-for="Lyrics" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">MP3 file</label>

        @if (!string.IsNullOrEmpty(Model?.MP3File))
        {
            var fileName = System.IO.Path.GetFileName(Model.MP3File);
            <div class="mb-2">
                <strong>Current file:</strong>
                <div>@fileName</div>
                <div>
                    <a href="@Url.Content(Model.MP3File)" target="_blank" rel="noopener">Download current file</a>
                </div>
                @if (Model.MP3File.EndsWith(".mp3", System.StringComparison.OrdinalIgnoreCase))
                {
                    <div class="mt-2">
                        <audio controls style="width:100%;">
                            <source src="@Url.Content(Model.MP3File)" type="audio/mpeg" />
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                }
            </div>
        }

        <input type="hidden" name="ExistingFilePath" value="@(Model?.MP3File ?? string.Empty)" />
        <input asp-for="MP3File" class="form-control" type="file" accept="audio/*" />
        <span asp-validation-for="MP3File" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Stored lyrics preview</label>
        <div class="border rounded p-2" style="min-height:160px; background:#f8f9fa;">
            @if (Model?.Lyric != null)
            {
                <pre style="white-space: pre-wrap; margin:0;">@Model.Lyric.Content</pre>
            }
            else if (!string.IsNullOrWhiteSpace(Model?.Lyrics))
            {
                <pre style="white-space: pre-wrap; margin:0;">@Model.Lyrics</pre>
            }
            else
            {
                <p class="text-muted">No stored lyrics</p>
            }
        </div>

        <div class="form-check mt-3">
            <input class="form-check-input" type="checkbox" name="RemoveLyric" id="RemoveLyric" value="true" />
            <label class="form-check-label" for="RemoveLyric">Remove stored lyrics</label>
        </div>
    </div>

    <div class="col-md-6">
        <label asp-for="UploadedAt" class="form-label"></label>
        <input asp-for="UploadedAt" class="form-control" />
        <span asp-validation-for="UploadedAt" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="UploadedById" class="form-label"></label>
        <input asp-for="UploadedById" class="form-control" />
        <span asp-validation-for="UploadedById" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
