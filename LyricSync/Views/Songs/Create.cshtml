@model LyricSync.Models.Song
@{
    ViewData["Title"] = "Create Song";
}

<h2 class="fw-bold mb-4" style="color: #4a3aff;">Upload a song</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-12">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Ordinary" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Artist" class="form-label"></label>
        <input asp-for="Artist" class="form-control" placeholder="Alex Warren" />
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Album" class="form-label"></label>
        <input asp-for="Album" class="form-control" placeholder="You'll be alright kid part 1" />
        <span asp-validation-for="Album" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Genre" class="form-label"></label>
        <input asp-for="Genre" class="form-control" placeholder="Pop"/>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Lyrics" class="form-label"></label>
        <textarea asp-for="Lyrics" class="form-control" rows="6" placeholder="Awesome lyrics here!"></textarea>
        <span asp-validation-for="Lyrics" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">MP3 file (required)</label>
        <input name="mp3File" class="form-control" type="file" accept="audio/*" required placeholder="myfaovietesong.mp3" />
        <span asp-validation-for="MP3File" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label for="lyricsFile" class="form-label">Optional lyrics file</label>
        <input name="lyricsFile" id="lyricsFile" class="form-control" type="file" accept=".txt,.lrc,.srt" placeholder="awesomelyric.txt" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary px-4" style="background: linear-gradient(90deg, #6200ea 0%, #2196f3 100%); border: none;">Upload Song</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
