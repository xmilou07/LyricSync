@model IEnumerable<LyricSync.Models.Song>

@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0" style="color: #4a3aff;">Your Library</h1>
        <div class="w-100 w-sm-50 ms-0 ms-sm-3" style="max-width:420px;">
            <input id="searchInput" class="form-control" type="search" placeholder="Search library..." aria-label="Search" />
        </div>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1 text-truncate">@item.Title</h5>
                        <p class="card-text mb-1"><small class="text-muted">Artist:</small> @item.Artist</p>
                        <p class="card-text mb-1"><small class="text-muted">Album:</small> @item.Album</p>
                        <p class="card-text mb-2"><small class="text-muted">Genre:</small> @item.Genre</p>

                        @if (!string.IsNullOrWhiteSpace(item.FilePath))
                        {
                            <audio controls preload="none" class="w-100 mb-2" style="max-height:48px;">
                                <source src="@item.FilePath" />
                                Your browser does not support the audio element.
                            </audio>
                        }
                        else
                        {
                            <p class="text-muted small mb-2">No audio file available</p>
                        }

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            <a class="btn btn-sm btn-outline-dark">Listen Aesthetically 🎶</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // client-side search/filter
        (function () {
            const input = document.getElementById('searchInput');
            if (!input) return;
            input.addEventListener('input', function () {
                const q = this.value.trim().toLowerCase();
                const cards = document.querySelectorAll('.card .card-body');
                cards.forEach(cb => {
                    const title = (cb.querySelector('.card-title')?.textContent || '').toLowerCase();
                    const artist = (cb.querySelector('.card-text')?.textContent || '').toLowerCase();
                    const container = cb.closest('.col-12');
                    const visible = q === '' || title.includes(q) || artist.includes(q);
                    if (container) container.style.display = visible ? '' : 'none';
                });
            });
        })();
    </script>
}
