@using LyricSync.Models
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";

    string displayName = null;
    if (User?.Identity?.IsAuthenticated == true)
    {
        var appUser = await UserManager.GetUserAsync(User);
        displayName = appUser?.Name ?? await UserManager.GetUserNameAsync(appUser) ?? User.Identity.Name;
    }
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h4><span class="text-primary fw-bold">Welcome@(displayName != null ? ", " + displayName : "")</span> store all your favourite music here!</h4>
        <p class="text-muted">
            But first, register or login below.<br />
            By registering we can guarantee a unique and personal environment for <strong>YOUR</strong> music.
        </p>
    </div>

    <div class="row justify-content-center">
        <!-- New Users -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold text-primary text-center">
                    New users
                </div>
                <div class="card-body">
                    <a class="btn btn-primary px-4" style="background: linear-gradient(90deg, #6200ea 0%, #2196f3 100%); border: none;"
                            href="/Identity/Account/Register">
                        Register
                    </a>
                </div>
            </div>
        </div>

        <!-- Existing Users -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light fw-bold text-primary text-center">
                    Existing users
                </div>
                <div class="card-body">
                    <a class="btn btn-primary px-4" style="background: linear-gradient(90deg, #6200ea 0%, #2196f3 100%); border: none;"
                       href="/Identity/Account/Login">
                        Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
